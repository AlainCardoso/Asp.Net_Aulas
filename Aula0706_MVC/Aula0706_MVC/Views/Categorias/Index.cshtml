@model IEnumerable<Aula0706_MVC.Models.Categoria>


@{
    ViewBag.Title = "Categorias";
}

<h2>@ViewBag.Title</h2>

@*
    Versao utilizando ViewBag com String

    @foreach(string cat in ViewBag.ListaCategorias)
    {
        @Html.ActionLink(@cat, "Index", "Categorias")
        @: |
    }
*@

@foreach (var cat in Model)
{
    <dl>
        <dt>@cat.Nome</dt>
        @if (!string.IsNullOrEmpty(cat.Descricao))
        {
            <dd>@cat.Descricao</dd>
        }
        else
        {
            <dd>
                <em>Sem descrição</em>
            </dd>
        }
    </dl>
}

